<table>
  <tr>
    <th></th>
    <th>Name </th>
    <th>Genre </th>
    <th></th>
    <th></th>
  </tr>
  <% @artists.each do |artist| %>
  <tr>
    <td><img src="<%=artist.photo_url%>" width="50" height="75"></td>
    </td>  
    <td><a href="/artists/<%=artist.id%>"><%=artist.name%></a></td>
    <td><%=artist.genre%></td>
    <td>
      <a href="/artists/<%=artist.id%>/edit">Edit</a>
