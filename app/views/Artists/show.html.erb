<h1><%=@artist.name%></h1>

<img src="<%=@artist.photo_url%>" width="150" height="225"> <br \>

Name: <%=@artist.name%> <br \>
Genre: <%=@artist.genre%> <br \>

<table>
  <tr>
    <th>Song</th>
    <th>year</th>
    <th></th>
    <th></th>
  </tr>
  <% @songs.each do |song| %>
  <tr>
    <td><%=song.title%></td>
    <td><%=song.year%></td>
    <td><a href="/artists/<%=@artist.id%>/songs/<%=song.id%>/edit">Edit</a></td>
    <td>
      <form action="/artists/<%=@artist.id%>/songs/<%=song.id%>" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
        <button>Delete</button>
      </form>      
    </td>
  </tr> 
  <% end %>
</table>


